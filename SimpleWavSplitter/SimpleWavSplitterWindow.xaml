<Window x:Class="SimpleWavSplitter.SimpleWavSplitterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimpleWavSplitter" 
        Height="90" 
        Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid x:Name="layout" SnapsToDevicePixels="True" UseLayoutRounding="True" TextOptions.TextFormattingMode="Display">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="110" />
            <ColumnDefinition Width="110" />
        </Grid.ColumnDefinitions>
        <ProgressBar x:Name="progress" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="3" Minimum="0" Maximum="100" />
        <Button x:Name="btnCancel" Click="btnCancel_Click" Content="Cancel Job" Grid.Column="1" Margin="3" />
        <Button x:Name="btnGetWavHeader" Click="btnGetWavHeader_Click" Content="Get WAV Header" Grid.Column="2"  Margin="3" />
        <Button x:Name="btnSplitWavFiles" Click="btnSplitWavFiles_Click" Content="Split WAV Files" Grid.Column="3" Margin="3" />
    </Grid>
    
</Window>
